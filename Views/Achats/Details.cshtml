@model outils_dotnet.Models.Achat

@{
    ViewData["Title"] = "Détails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Détails</h1>

<div>
    <h4>Achat</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantite)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantite)
        </dd>
        <dt class="col-sm-2">
            Nom de l'article
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Article.Nom
        </dd>
        <dt class="col-sm-2">
            Nom du client
        </dt>
        <dd class="col-sm-10">
            @ViewBag.User.Nom
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Retour</a>
</div>
