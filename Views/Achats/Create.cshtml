@model outils_dotnet.Models.Achat

@{
    ViewData["Title"] = "Créer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Créer</h1>

<h4>Achat</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <dl class="row">
                <dt class="col-sm-4">
                    Nom de l'article
                </dt>
                <dd class="col-sm-8">
                    @ViewBag.Article.Nom
                </dd>
            </dl>

            <input type="hidden" value="@ViewBag.Article.Id" name="ArticleId" />

            <div class="form-group">
                <label asp-for="Quantite" class="control-label"></label>
                <input asp-for="Quantite" class="form-control" min="1" max="@ViewBag.Article.Quantite" />
                <span asp-validation-for="Quantite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
                <select asp-for="ClientId" class="form-control" asp-items="ViewBag.ClientId"></select>
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
