@model outils_dotnet.Models.Reservation

@{
    ViewData["Title"] = "Créer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Créer</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <dl class="row">
                <dt class="col-sm-4">
                    Nom de l'article
                </dt>
                <dd class="col-sm-8">
                    @ViewBag.Article.Nom
                </dd>
            </dl>

            <dl class="row">
                <dt class="col-sm-4">
                    Nom du client
                </dt>
                <dd class="col-sm-8">
                    @ViewBag.User.Nom
                </dd>
            </dl>

            <input type="hidden" value="@ViewBag.Article.Id" name="ArticleId" />
            <input type="hidden" value="@ViewBag.Client.Id" name="ClientId" />

            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <br />
                @if (ViewBag.Article.Achetable)
                {
                    <label for="Achat" class="control-label">Achat</label>
                    <input type="radio" name="Type" id="Achat" value="Achat" required />
                }
                @if (ViewBag.Article.Louable)
                {
                    <label for="Location" class="control-label">Location</label>
                    <input type="radio" name="Type" id="Location" value="Location" required />
                }
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date_recup" class="control-label"></label>
                <input asp-for="Date_recup" class="form-control" />
                <span asp-validation-for="Date_recup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">Quantité</label>
                <input asp-for="Quantity" class="form-control" min="1" max="@ViewBag.Article.Quantite" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MesReservations">Retour</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
