@model outils_dotnet.Models.Reservation

@{
    ViewData["Title"] = "Honorer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Détails</h1>

<div>
    <h4>Honorer la réservation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date_recup)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date_recup)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            Nom de l'article
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Article.Nom
        </dd>
        <dt class="col-sm-2">
            Nom du client
        </dt>
        <dd class="col-sm-10">
            @ViewBag.User.Nom
        </dd>
    </dl>
    <form asp-action="Honorer">
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Type" />
            <input type="hidden" asp-for="Date" />
            <input type="hidden" asp-for="Date_recup" />
            <input type="hidden" asp-for="Quantity" />
            <input type="hidden" asp-for="ArticleId" />
            <input type="hidden" asp-for="ClientId" />
            @if(Model.Type == "Location") {
                <input type="date" id="date_retour" name="date_retour" required/>
            }
            <input type="submit" value="Honorer" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Retour</a>
</div>
