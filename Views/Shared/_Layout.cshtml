<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - outils_dotnet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">outils_dotnet</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Accueil</a>
                        </li>
                    </ul>

                </div>
                <ul class="nav navbar-nav navbar-right">
                    <partial name="_LoginPartial.cshtml" />
                </ul>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="row">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="col-md-4 col-lg-3 col-xl-2 navbar-nav flex-grow-1 outils-navbar">
                    <h2>Navigation</h2>
                    <nav>
                        <ul class="nav-ul">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Articles" asp-action="Index">Liste des articles</a>
                            </li>

                            @if (User.IsInRole("CLIENT"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Reservations" asp-action="MesReservations">Mes réservations</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Locations" asp-action="MesLocations">Mes locations</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Achats" asp-action="MesAchats">Mes achats</a>
                                </li>
                            }
                            @if ((User.IsInRole("VENDEUR")) || (User.IsInRole("ADMIN")))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Categories" asp-action="Index">Liste des catégories</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Clients" asp-action="Index">Liste des clients</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Reservations" asp-action="Index">Historique des réservations</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Locations" asp-action="Index">Historique des locations</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Achats" asp-action="Index">Historique des achats</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
                <div class="col-md-8 col-lg-9 col-xl-10">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            }
            else
            {
                <div class="col-md-12">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            }
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - outils_dotnet - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
