@model outils_dotnet.Areas.Identity.Data.User

@{
    ViewData["Title"] = "Modifier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Modifier</h1>

<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nom"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prenom"></label>
                <input asp-for="Prenom" class="form-control" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (ViewBag.Client)
                {
                    <label>Client : </label>
                    <input type="checkbox" id="roles" name="roles" value="client" onclick="return false" checked/>
                }
                else if (User.IsInRole("ADMIN"))
                {
                    <label>Admin : </label>
                    @if (ViewBag.Admin)
                    {
                        <input type="checkbox" id="roles" name="roles" value="admin" checked />
                    }
                    else
                    {
                        <input type="checkbox" id="roles" name="roles" value="admin" />
                    }
                    <label>Vendeur : </label>
                    @if (ViewBag.Vendeur)
                    {
                        <input type="checkbox" id="roles" name="roles" value="vendeur" checked />
                    }
                    else
                    {
                        <input type="checkbox" id="roles" name="roles" value="vendeur" />
                    }
                }
                else
                {
                    <label>Admin : </label>
                    @if (ViewBag.Admin)
                    {
                        <input type="checkbox" id="roles" name="roles" value="admin" onclick="return false" checked/>
                    }
                    else
                    {
                        <input type="checkbox" id="roles" name="roles" value="admin" onclick="return false"/>
                    }
                    <label>Vendeur : </label>
                    @if (ViewBag.Vendeur)
                    {
                        <input type="checkbox" id="roles" name="roles" value="vendeur" onclick="return false" checked/>
                    }
                    else
                    {
                        <input type="checkbox" id="roles" name="roles" value="vendeur" onclick="return false"/>
                    }
                }
                <br /><span class="text-danger">@ViewData["Suppression"]</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
